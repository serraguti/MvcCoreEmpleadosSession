@{ 
    Empleado empleado =
        Context.Session.GetObject<Empleado>("EMPLEADO");
}

@if (empleado == null)
{
    <li class="nav-item">
        <a asp-controller="Home"
           asp-action="LogIn"
           class="nav-link text-danger">
            Log In
        </a>
    </li>
}
else
{
    <div style="background-color: lightcoral">
        <img src="~/images/empleado.jpg" style="width: 80px; height: 80px"/>
        Bienvenido @empleado.Apellido, <b>@empleado.Oficio</b>
    </div>
    <li class="nav-item">
        <a asp-controller="Home"
           asp-action="CloseSession"
           class="nav-link">
            Sign Out
        </a>
    </li>
    <li class="nav-item">
        <a asp-controller="Home"
           asp-action="LimpiarCarritoEmpleados"
           class="nav-link">
            Vaciar carrito
        </a>
    </li>
}